<div id="main-wrapper" class="container">
    <div class="row justify-content-center align-items-center">
        <div class="col-xl-10">
            <div class="card border-0">
                <div class="card-body p-0">
                    <div class="row no-gutters">
                        <div class="col-lg-6">
                            <div class="p-5">
                                <h6 class="h5 mb-0">Login to your account</h6>

                                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                                  <%= render "devise/shared/error_messages", resource: resource %>
                                    <div class="form-group mb-4">
                                      <%= f.label :email, class:"text-capitalize" %><br />
                                      <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
                                    </div>
                                    
                                    <div class="form-group mb-4">
                                      <%= f.label :password, class:"text-capitalize" %><br />
                                      <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
                                    </div>
                                    
                                    <% if devise_mapping.rememberable? %>
                                      <div class="field mb-3">
                                        <%= f.check_box :remember_me %>
                                        <%= f.label :remember_me %>
                                      </div>
                                    <% end %>

                                    <%= f.submit "Log in", class:"btn btn-success form-control" %>
                                <% end %>

                                <p class="info text-muted text-center mt-3 mb-0">Don't have an account? <%= render "devise/shared/links" %></p>
                            </div>
                        </div>

                        <div class="col-lg-6 bg-light d-flex">
                            <%= image_tag "rocket.png", class:"mx-auto align-self-center img-fluid" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>