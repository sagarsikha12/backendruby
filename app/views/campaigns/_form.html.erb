<div class="container-fluid p-4">
  <%= form_with(model: @campaign, local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title, class:"form-control mb-4" %>
    </div>
    
    <div class="field">
      <%= form.label :category_id  %>
      <%= form.select :category_id, Category.pluck(:name, :id), class:"form-select mb-4" %>
    </div>

    <div class="field">
      <%= form.label :cover_image %>
      <%= form.file_field :cover_image, class:"form-control text-capitalize mb-4" %>
    </div>

    <div class="field">
      <%= form.label :content %>
      <%= form.rich_text_area :content, class:"form-control mb-4 h-100 customized-min-height" %>
    </div>

    <div class="actions btn btn-success">
      <%= form.submit %>
    </div>
  <% end %>
</div>